<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="360">
    <Grid>
        <TabControl
                pu:TabControlHelper.ItemHeight="30"
                pu:TabControlHelper.CanRemove="False"
                pu:TabControlHelper.SelectedBackground="AliceBlue"
                TabStripPlacement="Left" 
                Margin="0,0,-0.4,10.4">
            <TabItem Header="时间统计" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="33*"/>
                        <RowDefinition Height="59*"/>
                    </Grid.RowDefinitions>
                    <TabControl
                        pu:TabControlHelper.SelectedForeground="#3F3F3F" 
                                 TabStripPlacement="Bottom" Margin="54,0,34,268.8"  Grid.RowSpan="2">
                        <TabItem Header="今日">
                            <Grid>
                                <lvc:PieChart Name="today_piechart" Hoverable="False" DataTooltip="{x:Null}">
                                    <lvc:PieChart.Series>
                                        <lvc:PieSeries Values="3" DataLabels="True"
                               LabelPoint="{Binding PointLabel}"/>
                                        <lvc:PieSeries Values="4" DataLabels="True" 
                               LabelPoint="{Binding PointLabel}"/>
                                        <lvc:PieSeries Values="6" DataLabels="True" 
                               LabelPoint="{Binding PointLabel}"/>
                                        <lvc:PieSeries Values="2" DataLabels="True" 
                               LabelPoint="{Binding PointLabel}"/>
                                    </lvc:PieChart.Series>
                                </lvc:PieChart>
                            </Grid>
                        </TabItem>
                        <TabItem Header="昨日">
                            <Grid>
                                <lvc:PieChart x:Name="yesterday_piechart" Hoverable="False" DataTooltip="{x:Null}">
                                    <lvc:PieChart.Series>
                                        <lvc:PieSeries Values="3" DataLabels="True"
                               LabelPoint="{Binding PointLabel}"/>
                                        <lvc:PieSeries Values="4" DataLabels="True" 
                               LabelPoint="{Binding PointLabel}"/>
                                        <lvc:PieSeries Values="6" DataLabels="True" 
                               LabelPoint="{Binding PointLabel}"/>
                                        <lvc:PieSeries Values="2" DataLabels="True" 
                               LabelPoint="{Binding PointLabel}"/>
                                    </lvc:PieChart.Series>
                                </lvc:PieChart>
                            </Grid>
                        </TabItem>
                        <TabItem Header="一周">
                            <Grid>
                                <lvc:CartesianChart>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis LabelFormatter="{Binding YFormatter}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Labels="{Binding Labels}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                </lvc:CartesianChart>
                            </Grid>
                        </TabItem>
                    </TabControl>
                    <lvc:CartesianChart Series="{Binding SeriesCollection}" Margin="0,26.6,0,-0.2" Grid.Row="1">

                    </lvc:CartesianChart>
                </Grid>
            </TabItem>
            <TabItem Header="番茄钟"  Loaded="TomatoClock_OnLoaded">
                <Grid>
                    <Label Content="写选题报告" Margin="24,19,34,414.8" Background="AliceBlue" />


                    <TextBlock Text="00" Name="HourArea"   VerticalAlignment="Center" FontSize="18" Background="AliceBlue" Height="23" Margin="10,79,232.6,358"/>
                    <TextBlock Text=":" Name="HourSplitMinute"   VerticalAlignment="Center" FontSize="18" Background="AliceBlue" Height="23" Margin="58,79,188,358.8" RenderTransformOrigin="1.136,0.513" />
                    <TextBlock Text="25" Name="MinuteArea" VerticalAlignment="Center" FontSize="18" Background="AliceBlue" Margin="85,79,146,358.8" Height="23" />
                    <TextBlock Text=":" Name="MinuteSplitSecond"   VerticalAlignment="Center" FontSize="18" Background="AliceBlue" Height="23" Margin="127,79,117,358.8"/>
                    <TextBlock Text="00"  Name="SecondArea" VerticalAlignment="Center" FontSize="18" Background="AliceBlue" Height="23" Margin="164,79,59,358.8"/>

                </Grid>
            </TabItem>
            <TabItem Header="文件管理" Name="FileManagementTabItem" >
                <Grid>
                    <TextBox 
                        BorderBrush="Black"
                        BorderThickness="3"
                        Opacity="0.2"
                        pu:TextBoxHelper.FocusedBorderBrush="#00DBFF"
                        pu:TextBoxHelper.FocusedShadowColor="#00DBFF"
                        pu:TextBoxHelper.CornerRadius="3" Margin="25,26,42,266" Text="" />


                    <Label Content="最近打开..." HorizontalAlignment="Left" Margin="56,229,0,0" VerticalAlignment="Top"/>

                    <Label Content="需求分析报告.docx" Margin="57,261,78,166.8" />
                    <Label Content="选题报告.pdf" Height="31" Width="225" Margin="56,295,-13,134.8" />
                    <Image HorizontalAlignment="Left" Height="25" Margin="12,231,0,0" Source="Icon/file.jpeg"
                           VerticalAlignment="Top" Width="24"/>

                    <Button
                            Content="打开"
                            Foreground="black"
                            pu:ButtonHelper.ButtonStyle="Outline"
                            pu:ButtonHelper.CornerRadius="15" Margin="80,385,102,35.8" Background="aliceblue"/>
                    <Image HorizontalAlignment="Left" Height="54" Margin="99,86,0,0" VerticalAlignment="Top" Width="91" Source="Icon/plus.png" Opacity="0.9"/>
                    <Image HorizontalAlignment="Left" Height="26" Margin="12,295,0,0" VerticalAlignment="Top" Width="33" Source="Icon/PDF.png"/>
                    <Image HorizontalAlignment="Left" Height="26" Margin="12,264,0,0" VerticalAlignment="Top" Width="29" Source="Icon/word (1).png"/>


                </Grid>
            </TabItem>
            <Label Content="Label" Height="100" Width="100"/>
            <Image Height="100" Width="100"/>

        </TabControl>
        <Button Click="Button_Click" HorizontalAlignment="Left" Margin="20,430,0,0" VerticalAlignment="Top" Width="32" RenderTransformOrigin="0.178,0.95" Height="31" pu:ButtonHelper.ButtonStyle="Link">
            <WrapPanel>
                <Image Source="Icon/设 置.png" Height="32" Width="30"/>
            </WrapPanel>
        </Button>


    </Grid>

</Window>
