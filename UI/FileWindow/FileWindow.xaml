<Window x:Class="UI.FileWindow.FileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
        mc:Ignorable="d"
        Title="文件管理">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Tool Bar -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <!-- Home Button -->
            <Button Grid.Column="0"
                    BorderThickness="0"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <Image Source="../Icon/home.jpg" />
            </Button>

            <!-- Refresh Button -->

            <!-- Tag Search Box -->
            <TextBox Grid.Column="2"
                     x:Name="tagSearchBox" />

            <!-- Filename Search Box -->
            <TextBox Grid.Column="3"
                     Name="filenameSearchBox" />
        </Grid>

        <!-- Main Part -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Part: Tree View -->
            <TreeView Grid.Column="0"
                      Background="AliceBlue"
                      pu:TreeViewHelper.ItemHeight="30"
                      pu:TreeViewHelper.SelectMode="ChildOnly">
                <TreeViewItem Header="综合">
                    <Label Content="●主页" />
                    <Label Content="●搜索结果" />

                </TreeViewItem>

                <TreeViewItem Header="标签">
                    <Label Content="●数据结构" />
                    <Label Content="●算法" />
                    <Label Content="●Java" />

                </TreeViewItem>
            </TreeView>

            <!-- Right Part: File Area-->
            <Grid Grid.Column="1"
                  Background="LightYellow" />

        </Grid>

