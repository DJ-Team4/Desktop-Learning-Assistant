<Window x:Class="UI.FileWindow.FileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
        mc:Ignorable="d"
        Title="文件管理">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Tool Bar -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <Thickness x:Key="ToolbarItemMargin">4,4,4,4</Thickness>
            </Grid.Resources>

            <!-- Home Button -->
            <Button Grid.Column="0"
                    Name="homeButton"
                    BorderThickness="0"
                    Margin="{StaticResource ToolbarItemMargin}"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <Image Source="../Icon/home.jpg" />
            </Button>

            <!-- Refresh Button -->
            <Button Grid.Column="1"
                    Name="refreshButtn"
                    BorderThickness="0"
                    Margin="{StaticResource ToolbarItemMargin}"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <Image Source="../Icon/refresh.jpg" />
            </Button>

            <!-- Tag Search Box -->
            <TextBox Grid.Column="2"
                     x:Name="tagSearchBox"
                     Margin="{StaticResource ToolbarItemMargin}" />

            <!-- Filename Search Box -->
            <TextBox Grid.Column="3"
                     Name="filenameSearchBox"
                     Margin="{StaticResource ToolbarItemMargin}" />
        </Grid>

        <!-- Main Part -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- pu:TreeViewHelper.ItemHeight="30"
            pu:TreeViewHelper.SelectMode="ChildOnly" -->
            <!-- Left Part: Tree View -->
            <TreeView Grid.Column="0">
                <TreeViewItem Header="综合"
                              IsExpanded="True">
                    <TreeViewItem Header="主页" Selected="TreeViewItem_Selected"/>
                    <TreeViewItem Header="搜索结果" />
                </TreeViewItem>

                <TreeViewItem Header="标签"
                              IsExpanded="True"
                              ItemsSource="{Binding Tags}">
                    <!--TODO template-->
                    <DataTemplate DataType="TreeItemVM">
                        <TreeViewItem Header="{Binding Name}" />
                    </DataTemplate>
                    <!--<TreeViewItem Header="tag1" />
                    <TreeViewItem Header="tag2" />
                    <TreeViewItem Header="tag3" />
                    <TreeViewItem Header="tag4" />-->
                </TreeViewItem>
            </TreeView>

            <!-- Right Part: File Area-->
            <Grid Grid.Column="1"
                  Background="LightYellow" />

        </Grid>

    </Grid>
</Window>
