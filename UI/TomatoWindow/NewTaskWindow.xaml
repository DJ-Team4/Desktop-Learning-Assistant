<Window x:Class="UI.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:TimeTool="clr-namespace:Loya.Dameer;assembly=Loya.Dameer"
        xmlns:silver="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
        xmlns:myProgressbar="clr-namespace:UI.TomatoWindow.MyProgressbar"

        mc:Ignorable="d"
        Title="新建任务" Height="500" Width="500" >
    <Grid>

        <Label Content="任务名" HorizontalAlignment="Left" Margin="35,26,0,0" VerticalAlignment="Top" Height="34" Width="104" Background="AliceBlue" VerticalContentAlignment="Center"/>
        <Label Content="开始时间" HorizontalAlignment="Left" Margin="35,77,0,0" VerticalAlignment="Top" Height="34" Width="104"  Background="AliceBlue" VerticalContentAlignment="Center"/>
        <Label Content="截止时间" HorizontalAlignment="Left" Margin="35,128,0,0" VerticalAlignment="Top" Height="34" Width="104"  Background="AliceBlue" VerticalContentAlignment="Center"/>
        <Label Content="备注" HorizontalAlignment="Left" Margin="35,257,0,0" VerticalAlignment="Top" Height="34" Width="104"  Background="AliceBlue" VerticalContentAlignment="Center"/>
        <Label Content="所需番茄数" HorizontalAlignment="Left" Margin="35,176,0,0" VerticalAlignment="Top" Height="34" Width="104"  Background="AliceBlue" VerticalContentAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Height="34" Margin="177,26,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="158"/>
        <ListView   Name="ListViewTomato" HorizontalAlignment="Left" Height="239"   
                    Margin="274,82,0,0" VerticalAlignment="Top" Width="43" RenderTransformOrigin="0.5,0.5"

        >
            <ListView.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.775"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListView.RenderTransform>



        </ListView>
        <Button
            Content="确认"
            Foreground="black"
            silver:ButtonHelper.ButtonStyle="Outline"
            silver:ButtonHelper.CornerRadius="3" Background="aliceblue" Margin="414,400,9.6,26.4"
            Click="NewTask_Click"
        />

        <TextBox HorizontalAlignment="Left" Height="97" Margin="178,257,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="236"/>
        <TimeTool:Dameer  Foreground="Black" 
                          Format="Custom"
                          CustomFormat="yyyy-MM-dd HH:mm:ss"
                          ShowCheckBox="false"
                          Value="11/11/2020 1:50 PM"
                          Margin="173,77,42.6,355.4">


        </TimeTool:Dameer>
        <TimeTool:Dameer  Foreground="Black" 
                          Format="Custom"
                          CustomFormat="yyyy-MM-dd HH:mm:ss"
                          ShowCheckBox="false"
                          Value="11/11/2020 3:50 PM"
                          Margin="173,120,46.6,314.4">


        </TimeTool:Dameer>

        <Button
            Content="增加"
            Foreground="black"
            silver:ButtonHelper.ButtonStyle="Outline"
            silver:ButtonHelper.CornerRadius="3" Background="aliceblue" Margin="431,187,9.6,248.4"
            Click='AddTomatoNum_OnClick'
        />

    </Grid>
</Window>
