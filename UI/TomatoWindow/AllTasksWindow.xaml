<Window x:Class="UI.Tomato.AllTasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Tomato"
        mc:Ignorable="d"
        Title="所有任务" Height="450" Width="780" >
    <Grid>

        <DataGrid Name="AllTasksDataGrid" HorizontalAlignment="Left" Height="352" Margin="10,41,0,0" VerticalAlignment="Top" Width="736">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding taskID}"/>
                <DataGridTextColumn  Header="任务名称" Width="90" Binding="{Binding name}"/>
                <DataGridTextColumn   Header="开始时间" Width="100" Binding="{Binding startTime}"/>
                <DataGridTextColumn Header="截止时间" Width="100" Binding="{Binding deadLine}"/>
                <DataGridTextColumn Header="设定番茄数" Width="110" Binding="{Binding tomatoNum}"/>
                <DataGridTextColumn Header="已完成番茄数" Width="120" Binding="{Binding tomatoCount}"/>
                <DataGridTextColumn Header="任务状态" Width="95" Binding="{Binding taskState}"/>
                <DataGridTextColumn Header="备注" Width="80" Binding="{Binding notes}"/>
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu Width="100">
                    <MenuItem Header="添加" Click="Add_OnClick">
                    </MenuItem>
                    <MenuItem Header="编辑" Click="Modify_OnClick" Width="100">
                    </MenuItem>
                    <MenuItem Header="删除" Click="Delete_OnClick" Width="100">
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>



    </Grid>
</Window>
