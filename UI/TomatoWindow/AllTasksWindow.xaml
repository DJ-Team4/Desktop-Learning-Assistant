<Window x:Class="UI.Tomato.AllTasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Tomato"
        mc:Ignorable="d"
        Title="所有任务" Height="450" Width="750" >
    <Grid>
        <ListView  Name="AllTasksListView" HorizontalAlignment="Left" Height="336" Margin="31,40,0,0" VerticalAlignment="Top" Width="664">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="任务ID" Width="50" DisplayMemberBinding="{Binding TaskID}" />
                    <GridViewColumn Header="任务名称" Width="100" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="开始时间" Width="90" DisplayMemberBinding="{Binding StartTime}"/>
                    <GridViewColumn Header="截止时间" Width="90" DisplayMemberBinding="{Binding EndTime}"/>
                    <GridViewColumn Header="设定番茄数" Width="80" DisplayMemberBinding="{Binding TomatoList}"/>
                    <GridViewColumn Header="已完成番茄数" Width="90" DisplayMemberBinding="{Binding present_tomato}"/>
                    <GridViewColumn Header="任务状态" Width="60" DisplayMemberBinding="{Binding TaskState}"/>
                    <GridViewColumn Header="备注" Width="100" DisplayMemberBinding="{Binding Notes}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
