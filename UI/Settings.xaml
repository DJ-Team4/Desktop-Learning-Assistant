                        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="22,10,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="22,46,0,0" VerticalAlignment="Top"/>
                        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="22,83,0,0" VerticalAlignment="Top"/>
                    </Grid>
                    <Button Click="Button_Click" Content="确定" HorizontalAlignment="Left" Margin="420,328,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="2.884,6.097"/>

                </Grid>
            </TabItem>
            <TabItem Header="番茄钟">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
