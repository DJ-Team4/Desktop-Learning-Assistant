<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
        xmlns:local="clr-namespace:UI"
        xmlns:MyProgress="clr-namespace:UI.TomatoWindow.MyProgressbar"

        xmlns:myProgressbar="clr-namespace:UI.TomatoWindow.MyProgressbar"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="360" AllowDrop="True" WindowStyle="None">
    <Grid>
        <TabControl
                pu:TabControlHelper.ItemHeight="30"
                pu:TabControlHelper.CanRemove="False"
                pu:TabControlHelper.SelectedBackground="AliceBlue"
                TabStripPlacement="Left" 
                Margin="0,0,-0.667,0.333" HorizontalAlignment="Left" Width="354">
            <TabItem Header="时间统计" Name="TimeStatisticTabItem">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="33*"/>
                        <RowDefinition Height="59*"/>
                    </Grid.RowDefinitions>
                    <TabControl
                        pu:TabControlHelper.SelectedForeground="#3F3F3F" 
                                 TabStripPlacement="Top"  Grid.RowSpan="2" Margin="0,0,0,45">
                        <TabItem Header="今日">
                            <Grid>
                                <lvc:PieChart Name="today_piechart" Hoverable="False" Series="{Binding TodayPieSeriesCollection}" DataClick="Chart_OnDataClick" Opacity="0.8" Margin="0,0,0,228" Grid.ColumnSpan="2">
                                    <lvc:PieChart.DataTooltip>
                                        <lvc:DefaultTooltip BulletSize="10"></lvc:DefaultTooltip>
                                    </lvc:PieChart.DataTooltip>
                                </lvc:PieChart>
                                <lvc:CartesianChart Series="{Binding TodayColunmSeriesCollection}" Margin="0,226,0,0" Grid.ColumnSpan="2">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Labels="{Binding TodayColumnXLabels}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                            </Grid>
                        </TabItem>
                        <TabItem Header="一周">
                            <Grid>
                                <lvc:PieChart x:Name="week_piechart" Hoverable="False" Series="{Binding WeekPieSeriesCollection}" Opacity="0.8" Margin="0,0,0,228" Grid.ColumnSpan="2">
                                    <lvc:PieChart.DataTooltip>
                                        <lvc:DefaultTooltip BulletSize="10"></lvc:DefaultTooltip>
                                    </lvc:PieChart.DataTooltip>
                                </lvc:PieChart>
                                <lvc:CartesianChart Series="{Binding WeekColunmSeriesCollection}" Margin="0,226,0,0" AnimationsSpeed="0" Grid.ColumnSpan="2">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Labels="{Binding WeekColumnXLabels}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                            </Grid>
                        </TabItem>
                        <!--TabItem Header="一周">
                            <Grid>
                                <lvc:CartesianChart Series="{Binding LineSeriesCollection}">
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Labels="{Binding LineXLabels}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                </lvc:CartesianChart>
                            </Grid>
                        </-->

                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="番茄钟"  Loaded="TomatoClock_OnLoaded">
                <Grid>
                    <TabControl
                        pu:TabControlHelper.SelectedForeground="#3F3F3F" 
                        TabStripPlacement="Top">
                        <TabItem Header="番茄钟" Height="36">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="259*"/>
                                    <RowDefinition Height="198*"/>
                                </Grid.RowDefinitions>
                                <Label Content="当前任务"    HorizontalAlignment="Left" VerticalAlignment="Top" Background="AliceBlue" Height="29" Width="68" />
                                <MyProgress:Progressbar_xy x:Name="circleProgressBar"  CurrentValue1="1" Height="173" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="49,29,48.6,57.2" />
                                <Button x:Name="btn" Content="开始"
                                        Click="ButtonStart_Click"
                                        Foreground="Black"
                                        MouseRightButtonDown="TimeCountPause_Click"
                                        Background="#7bffff7f" Grid.Row="0"
                                        HorizontalAlignment="Left" Margin="105,230,0,0" VerticalAlignment="Top" Width="75" Height="19"/>


                                <StackPanel  Orientation="Horizontal" Margin="0,0,-0.4,0.6" Grid.RowSpan="2" >
                                    <TextBlock Text="00" Visibility="Hidden" Name="HourArea"   VerticalAlignment="Center" FontSize="12" Background="Transparent" Height="23"/>
                                    <TextBlock Text=":" Visibility="Hidden" Name="HourSplitMinute"   VerticalAlignment="Center" FontSize="12" Background="Transparent" Height="23" Margin="35.2,103,62.6,108.4" RenderTransformOrigin="1.136,0.513" Grid.Column="1" />
                                    <TextBlock  Text="25" x:Name="MinuteArea" FontSize="18" Width="26" Margin="-8,191,0,235.8" />
                                    <TextBlock Text=":" x:Name="MinuteSplitSecond"    FontSize="18" Background="Transparent" Width="15" Margin="4,191,9,235.8"/>
                                    <TextBlock Text="00"  x:Name="SecondArea"   FontSize="18" Background="Transparent" Width="26" Margin="-12,191,9,235.8" />

                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Header="效率统计">
                            <Grid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="文件管理" Name="FileManagementTabItem"  AllowDrop="True">
                <Grid>
                    <Border
                        BorderBrush="Black"
                        BorderThickness="30"
                        Opacity="0.2"
                        pu:TextBoxHelper.FocusedBorderBrush="#00DBFF"
                        pu:TextBoxHelper.FocusedShadowColor="#00DBFF"
                        pu:TextBoxHelper.CornerRadius="3"
                        Margin="25,26,42,266"
                        AllowDrop="True"
                        DragEnter="File_DragEnter"
                        Drop="File_Drop">
                        <!--<Grid VerticalAlignment="Stretch" 
                              HorizontalAlignment="Stretch"
                              Background="Red"/>-->
                    </Border>


                    <Label Name="Label" Content="最近打开..." HorizontalAlignment="Left" Margin="56,229,0,0" VerticalAlignment="Top"/>

                    <Label Content="需求分析报告.docx" Margin="57,261,78,166.8" />
                    <Label Content="选题报告.pdf" Height="31" Width="225" Margin="56,295,-13,134.8" />
                    <Image HorizontalAlignment="Left" Height="25" Margin="12,231,0,0" 
                           VerticalAlignment="Top" Width="24"/>

                    <Button Content="文件管理"
                            Foreground="black"
                            pu:ButtonHelper.ButtonStyle="Outline"
                            pu:ButtonHelper.CornerRadius="15"
                            Margin="80,385,102,35.8"
                            Background="aliceblue"
                            Click="OpenFileWinButton_Click"/>
                    <!-- <Image HorizontalAlignment="Left" Height="54" Margin="99,86,0,0" VerticalAlignment="Top" Width="55" Source="Icon/plus.png" Opacity="0.9"/> -->

                </Grid>
            </TabItem>


            <Image Height="100" Width="100"/>
            <Label Content="当前任务" Background="AliceBlue" Height="30" Width="69" />
            <Image Height="100" Width="100"/>
        </TabControl>
        <Button Click="Button_Click" HorizontalAlignment="Left" Margin="20,430,0,0" VerticalAlignment="Top" Width="32" RenderTransformOrigin="0.178,0.95" Height="31" pu:ButtonHelper.ButtonStyle="Link">
            <WrapPanel>
                <Image Source="Set.png" Height="32" Width="30"/>
            </WrapPanel>
        </Button>
    </Grid>

</Window>
