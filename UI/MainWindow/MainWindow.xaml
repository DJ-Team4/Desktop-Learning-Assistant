<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
        xmlns:local="clr-namespace:UI"
        xmlns:MyProgress="clr-namespace:UI.TomatoWindow.MyProgressbar"

        xmlns:myProgressbar="clr-namespace:UI.TomatoWindow.MyProgressbar"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="360" AllowDrop="True" WindowStyle="None" MouseMove="Window_MouseMove" WindowStartupLocation="Manual" Left="{Binding left}" Top="0">
    <Grid>
        <TabControl
                pu:TabControlHelper.ItemHeight="30"
                pu:TabControlHelper.CanRemove="False"
                pu:TabControlHelper.SelectedBackground="AliceBlue"
                TabStripPlacement="Left" 
                Margin="0,0,-0.667,0.333" HorizontalAlignment="Left" Width="354">
            <TabItem Header="时间统计" Name="TimeStatisticTabItem">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="129*"/>
                    </Grid.RowDefinitions>
                    <TabControl
                        pu:TabControlHelper.SelectedForeground="#3F3F3F" 
                                 TabStripPlacement="Top" Margin="0,0,-0.4,-0.4">
                        <TabItem Header="今日">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="202*"/>
                                    <RowDefinition Height="261*"/>
                                </Grid.RowDefinitions>
                                <lvc:PieChart Name="today_piechart" Grid.Row="0" Hoverable="False" Series="{Binding TodayPieSeriesCollection}" DataClick="Chart_OnDataClick" Opacity="0.8" Margin="5" AnimationsSpeed="0">
                                    <lvc:PieChart.DataTooltip>
                                        <lvc:DefaultTooltip BulletSize="10"></lvc:DefaultTooltip>
                                    </lvc:PieChart.DataTooltip>
                                </lvc:PieChart>
                                <lvc:CartesianChart Series="{Binding TodayColumnSeriesCollection}" Margin="5" Grid.Row="1" AnimationsSpeed="0">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Labels="{Binding TodayColumnXLabels}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                            </Grid>
                        </TabItem>
                        <TabItem Header="一周">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="202*"/>
                                    <RowDefinition Height="261*"/>
                                </Grid.RowDefinitions>
                                <lvc:PieChart x:Name="week_piechart" Grid.Row="0" Hoverable="False" Series="{Binding WeekPieSeriesCollection}" Opacity="0.8" Margin="5" AnimationsSpeed="0">
                                    <lvc:PieChart.DataTooltip>
                                        <lvc:DefaultTooltip BulletSize="10"></lvc:DefaultTooltip>
                                    </lvc:PieChart.DataTooltip>
                                </lvc:PieChart>
                                <lvc:CartesianChart Grid.Row="1" Series="{Binding WeekColumnSeriesCollection}" Margin="5" AnimationsSpeed="0">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Labels="{Binding WeekColumnXLabels}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                            </Grid>
                        </TabItem>

                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="番茄钟"  Loaded="TomatoClock_OnLoaded">
                <Grid>
                    <TabControl
                        pu:TabControlHelper.SelectedForeground="#3F3F3F" 
                        TabStripPlacement="Top" SelectionChanged="TabControl_SelectionChanged">
                        <TabItem Header="番茄钟">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="246*"/>
                                    <RowDefinition Height="217*"/>
                                </Grid.RowDefinitions>
                                <DockPanel Grid.Row="0" Margin="0,0,0,0">
                                    <Label Content="当前任务"    HorizontalAlignment="Left" VerticalAlignment="Top" Background="AliceBlue" Height="29" Width="68" Margin="0,0,0,-9" DockPanel.Dock="Top"/>
                                    <Label Name="LabelCurrentTask" Content=""    HorizontalAlignment="Left" VerticalAlignment="Top" Background="AliceBlue" Height="29" Width="128" Margin="80,-20,0,-9" DockPanel.Dock="Top"/>

                                    <myProgressbar:Progressbar_xy x:Name="circleProgressBar"  CurrentValue1="1" Height="173" Width="180" HorizontalAlignment="Center" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0"/>
                                    <WrapPanel DockPanel.Dock="Top" Height="27" Margin="0,0,0,0">
                                        <TextBlock Text="00" Visibility="Hidden" Name="HourArea" FontSize="12" Background="Transparent" Height="23"/>
                                        <TextBlock Text=":" Visibility="Hidden" Name="HourSplitMinute" FontSize="12" Background="Transparent" Height="23" RenderTransformOrigin="1.136,0.513"/>
                                        <TextBlock  Text="25" x:Name="MinuteArea" FontSize="18" Width="26" Margin="85,0,0,0"/>
                                        <TextBlock Text=":" x:Name="MinuteSplitSecond" FontSize="18" Background="Transparent" Width="15"/>
                                        <TextBlock Text="00"  x:Name="SecondArea" FontSize="18" Background="Transparent" Width="26"/>
                                    </WrapPanel>
                                    <Button x:Name="btn" Content="开始"
                                        Click="ButtonStart_Click"
                                        Foreground="Black"
                                        MouseRightButtonDown="TimeCountPause_Click"
                                        Background="#7bffff7f"
                                        HorizontalAlignment="Center" Width="75" Height="19" DockPanel.Dock="Bottom" Margin="0,0,0,5" VerticalAlignment="Bottom"/>
                                </DockPanel>
                                <StackPanel  Orientation="Horizontal" Margin="0,0.6,-0.4,0.2" Grid.Row="1" >

                                    <Button Content="详情" HorizontalAlignment="Right" Margin="203,0,0,34" VerticalAlignment="Bottom" Width="56" Height="25" Click="OpenAllTasks_OnClick"
                                         />

                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Header="效率统计">
                            <Grid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="文件管理" Name="FileManagementTabItem"  AllowDrop="True">
                <Grid>
                    <Border
                        BorderBrush="Black"
                        BorderThickness="30"
                        Opacity="0.2"
                        pu:TextBoxHelper.FocusedBorderBrush="#00DBFF"
                        pu:TextBoxHelper.FocusedShadowColor="#00DBFF"
                        pu:TextBoxHelper.CornerRadius="3"
                        Margin="25,26,42,266"
                        AllowDrop="True"
                        DragEnter="File_DragEnter"
                        Drop="File_Drop">
                        <!--<Grid VerticalAlignment="Stretch" 
                              HorizontalAlignment="Stretch"
                              Background="Red"/>-->
                    </Border>


                    <Label Name="Label" Content="最近打开..." HorizontalAlignment="Left" Margin="56,229,0,0" VerticalAlignment="Top"/>

                    <Label Content="需求分析报告.docx" Margin="57,261,78,166.8" />
                    <Label Content="选题报告.pdf" Height="31" Width="225" Margin="56,295,-13,134.8" />
                    <Image HorizontalAlignment="Left" Height="25" Margin="12,231,0,0" 
                           VerticalAlignment="Top" Width="24"/>

                    <Button Content="文件管理"
                            Foreground="black"
                            pu:ButtonHelper.ButtonStyle="Outline"
                            pu:ButtonHelper.CornerRadius="15"
                            Margin="80,385,102,35.8"
                            Background="aliceblue"
                            Click="OpenFileWinButton_Click"/>
                    <!-- <Image HorizontalAlignment="Left" Height="54" Margin="99,86,0,0" VerticalAlignment="Top" Width="55" Source="Icon/plus.png" Opacity="0.9"/> -->

                </Grid>
            </TabItem>


            <Image Height="100" Width="100"/>
            <Label Content="当前任务" Background="AliceBlue" Height="30" Width="69" />
            <Image Height="100" Width="100"/>


        </TabControl>
        <Button Click="Button_Click" HorizontalAlignment="Left" Margin="20,430,0,0" VerticalAlignment="Top" Width="32" RenderTransformOrigin="0.178,0.95" Height="31" pu:ButtonHelper.ButtonStyle="Link">
            <WrapPanel>
                <Image Source="Set.png" Height="32" Width="30"/>
            </WrapPanel>
        </Button>
        <Menu pu:MenuHelper.MenuStyle="Modern" Margin="10,315,278.333,149.333" Width="Auto">
            <MenuItem Header="关闭" Click="MenuItem_Click">
                <MenuItem Header="隐藏" Click="MenuItem_Click_1"/>
                <MenuItem Header="退出" Click="MenuItem_Click_2"/>
            </MenuItem>
        </Menu>
    </Grid>

</Window>
