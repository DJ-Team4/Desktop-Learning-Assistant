<Window x:Class="UI.TagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"

        mc:Ignorable="d"
        Title="TagWindow" Height="500" Width="360">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="292*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="6,10,10,306" Grid.ColumnSpan="2" >
            <TextBox  x:Name="SearchBox"  TabIndex="0"  BorderThickness="1" Margin="34,23,0,411" HorizontalAlignment="Left" Width="268"  
                     ToolTipService.ToolTip="Please input keywords" ToolTipService.InitialShowDelay="1" ToolTipService.Placement="MousePoint" Height="26">
                <TextBox.Resources>
                    <VisualBrush  x:Key="HelpBrush" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                        <VisualBrush.Visual>
                            <TextBlock FontStyle="Italic" Foreground="Black"  Text="Search Files"/>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </TextBox.Resources>
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

        </StackPanel>
        <Grid RenderTransformOrigin="0.499,0.302" Margin="6,93,14,324" Background="AliceBlue" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="112*"/>
            </Grid.ColumnDefinitions>
            <Label Content="C#"  HorizontalAlignment="Left"  
                   Margin="10,17,0,0" VerticalAlignment="Top" Height="25" Width="42"/>
            <Label Content="Java"  HorizontalAlignment="Left"   
                   Margin="64,17,0,0" VerticalAlignment="Top" Height="25" Width="42"/>
            <TextBox Background="Aliceblue"
                     pu:TextBoxHelper.CornerRadius="15" Margin="10,90,12,-282"/>
        </Grid>


    </Grid>
</Window>
